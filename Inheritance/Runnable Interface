class Cake implements Runnable {
    public void run() {
        System.out.println("Mixing for cake " + Thread.currentThread().getId());
        System.out.println("Baking for cake " + Thread.currentThread().getId());
        System.out.println("Decorating for cake " + Thread.currentThread().getId());
    }
}

class Threadbake {
    public static void main(String[] args) {
        int count = 4;
        for (int i = 0; i < count; i++) {
            Cake cake = new Cake();
            Thread th = new Thread(cake);
            th.start();
        }
    }
}
