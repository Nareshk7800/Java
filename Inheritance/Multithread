class Cake extends Thread{
    public void run(){
        System.out.println("Mixing for cake "+Cake.currentThread().getId());
        System.out.println("Baking for cake "+Cake.currentThread().getId());
        System.out.println("Decorating for cake "+Cake.currentThread().getId());
    }
}
class Threadbake{
    public static void main(String[] args) {
        int count=4;
        for(int i=0;i<count;i++){
            Cake cake = new Cake();
        cake.start();
        }
        
    }
}

